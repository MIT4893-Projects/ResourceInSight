<UserControl x:Class="ResourceInSight.Views.ResourceInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ResourceInSight.Views"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             Margin="10">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock FontFamily="{StaticResource FontAwesomeSolid}"
                   FontSize="20"
                   Text="{Binding ResourceIcon}"
                   TextAlignment="Center"
                   VerticalAlignment="Center" />
        <TextBlock Grid.Column="2"
                   FontFamily="{StaticResource GoogleSans}"
                   FontSize="25"
                   Text="100%" />
    </Grid>
</UserControl>
